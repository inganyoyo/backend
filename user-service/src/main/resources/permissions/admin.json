{
  "role": "ADMIN",
  "description": "관리자 권한 - USER 권한을 자동 상속받음",
  "inherits": ["USER", "ANONYMOUS"],
  "permissions": [
    {
      "service": "*",
      "method": "GET",
      "path": "/api/**",
      "description": "모든 GET 요청"
    },
    {
      "service": "*",
      "method": "POST",
      "path": "/api/**",
      "description": "모든 POST 요청"
    },
    {
      "service": "*",
      "method": "PUT",
      "path": "/api/**",
      "description": "모든 PUT 요청"
    },
    {
      "service": "*",
      "method": "DELETE",
      "path": "/api/**",
      "description": "모든 DELETE 요청"
    }
  ]
}
